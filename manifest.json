{
	"name": "Drone",
	"version" : "1.0",
	"manifest_version":2,
	"description": "Service monitoring tool",
    "background":{
        "scripts":[
            "/Configuration/servers.js",
            "/Namespace.js",
            "/Background/Log.js",
            "/Background/Configuration/Watchers.js",
            "/Entity/Watch.js",
            "/Entity/WatchList.js",
            "/Storage/Engine.js",
            "/Storage/WatchList.js",
            "/Background/Watcher/Engine.js",
            "/Background/Main.js"

        ],
        "persistent":true
    },
    "web_accessible_resources": [
        "/Html/Bootstrap/img/check.png",
        "/Html/Bootstrap/img/removesign.png"
    ],
    "browser_action": {
        "default_icon" : "icon.png"
    },
    "permissions": [
           "tabs",
           "http://*/*",
           "notifications",
           "declarativeWebRequest"
    ]
}
