{
	"name": "Drone",
	"version" : "1.0",
	"manifest_version":2,
	"description": "Service monitoring tool",
    "background":{
        "scripts":[
            "/configuration/servers.js",
            "/Namespace.js",
            "/background/Log.js",
            "/background/Configuration/Watchers.js",
            "/Entity/Watch.js",
            "/Entity/WatchList.js",
            "/background/Watcher/Engine.js",
            "/background/Main.js"

        ],
        "persistent":false
    },
    "permissions": [
           "http://*/*",
           "notifications",
           "declarativeWebRequest"
    ]
}
